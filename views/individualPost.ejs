<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/tailwind.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
    <title><%= post.title %> - Reddit Clone</title>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 min-h-screen">
    <!-- Navigation Bar -->
    <nav class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <a href="/posts" class="text-2xl font-bold text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300">ğŸ“± Reddit Clone</a>
          <a href="/posts" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 transition">
            â† Back to Home
          </a>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Post Card -->
      <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden mb-6 ring ring-gray-900/5 dark:ring-gray-100/10">
        <div class="p-6">
          <div class="flex gap-6">
            <!-- Voting Section -->
            <div class="flex flex-col items-center min-w-[60px] space-y-2">
              <% if (user) { %>
                <form action="/posts/vote/<%= post.id %>" method="POST" class="m-0">
                  <input type="hidden" name="setvoteto" value="<%= userVote === 1 ? 0 : 1 %>">
                  <button type="submit" class="vote-btn <%= userVote === 1 ? 'active-upvote' : '' %> text-3xl">
                    ğŸ‘
                  </button>
                </form>
                <span class="font-bold text-2xl text-gray-700 dark:text-gray-200"><%= voteTotal %></span>
                <form action="/posts/vote/<%= post.id %>" method="POST" class="m-0">
                  <input type="hidden" name="setvoteto" value="<%= userVote === -1 ? 0 : -1 %>">
                  <button type="submit" class="vote-btn <%= userVote === -1 ? 'active-downvote' : '' %> text-3xl">
                    ğŸ‘
                  </button>
                </form>
              <% } else { %>
                <span class="text-3xl opacity-30">ğŸ‘</span>
                <span class="font-bold text-2xl text-gray-700 dark:text-gray-200"><%= voteTotal %></span>
                <span class="text-3xl opacity-30">ğŸ‘</span>
              <% } %>
            </div>

            <!-- Post Content -->
            <div class="flex-1">
              <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-4"><%= post.title %></h1>

              <div class="flex items-center space-x-3 text-sm text-gray-500 dark:text-gray-400 mb-4">
                <span class="flex items-center">
                  ğŸ‘¤ <strong class="ml-1 text-gray-700 dark:text-gray-300"><%= post.creator.name || post.creator.uname %></strong>
                </span>
                <span>â€¢</span>
                <a href="/subs/show/<%= post.subgroup %>" class="px-2 py-1 bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300 rounded-full hover:bg-blue-200 dark:hover:bg-blue-900 transition font-medium">
                  r/<%= post.subgroup %>
                </a>
                <span>â€¢</span>
                <span>ğŸ“… <%= post.timestamp.toLocaleDateString() %></span>
              </div>

              <% if (post.link) { %>
                <a href="<%= post.link %>" target="_blank" class="inline-flex items-center px-4 py-2 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/50 transition mb-4">
                  ğŸ”— <%= post.link %>
                </a>
              <% } %>

              <p class="text-gray-700 dark:text-gray-300 text-lg leading-relaxed mb-4"><%= post.description %></p>

              <!-- Edit/Delete buttons -->
              <% if (user && user.id === post.creatorId) { %>
                <div class="flex space-x-3 pt-4 border-t border-gray-200 dark:border-gray-700">
                  <a href="/posts/edit/<%= post.id %>" class="px-4 py-2 bg-yellow-500 dark:bg-yellow-600 text-white rounded-lg hover:bg-yellow-600 dark:hover:bg-yellow-700 transition font-medium">
                    âœï¸ Edit
                  </a>
                  <a href="/posts/deleteconfirm/<%= post.id %>" class="px-4 py-2 bg-red-500 dark:bg-red-600 text-white rounded-lg hover:bg-red-600 dark:hover:bg-red-700 transition font-medium">
                    ğŸ—‘ï¸ Delete
                  </a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </article>

      <!-- Comments Section -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 ring ring-gray-900/5 dark:ring-gray-100/10">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          ğŸ’¬ Comments (<%= post.comments.length %>)
        </h2>

        <!-- Comment Form (if logged in) -->
        <% if (user) { %>
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4 mb-6">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-3">Add a Comment</h3>
            <form action="/posts/comment-create/<%= post.id %>" method="POST" class="space-y-3">
              <textarea
                id="description"
                name="description"
                rows="3"
                placeholder="What are your thoughts?"
                required
                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400"
              ></textarea>
              <button type="submit" class="px-6 py-2 bg-blue-600 dark:bg-blue-500 text-white rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600 transition font-medium">
                Post Comment
              </button>
            </form>
          </div>
        <% } else { %>
          <div class="bg-blue-50 dark:bg-blue-900/30 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-6">
            <p class="text-blue-700 dark:text-blue-300">
              <a href="/auth/login" class="font-semibold underline hover:text-blue-900 dark:hover:text-blue-100">Log in</a> to join the discussion
            </p>
          </div>
        <% } %>

        <!-- Comments List -->
        <div class="space-y-4">
          <% if (post.comments.length === 0) { %>
            <div class="text-center py-8 text-gray-500 dark:text-gray-400">
              <p class="text-lg">ğŸ’­ No comments yet. Be the first to share your thoughts!</p>
            </div>
          <% } else { %>
            <% post.comments.forEach(comment => { %>
              <div class="border-l-4 border-blue-400 dark:border-blue-500 bg-gray-50 dark:bg-gray-700/50 rounded-r-lg p-4 hover:bg-gray-100 dark:hover:bg-gray-700 transition">
                <p class="text-gray-800 dark:text-gray-200 mb-2"><%= comment.description %></p>
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 space-x-2">
                  <span class="font-semibold text-gray-700 dark:text-gray-300">ğŸ‘¤ <%= comment.creator.name || comment.creator.uname %></span>
                  <span>â€¢</span>
                  <span>ğŸ“… <%= comment.timestamp.toLocaleDateString() %></span>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>
      </div>
    </main>
  </body>
</html>
